{
    "name": "radonthetyrant/jsonobject-validation-bundle",
    "description": "This bundle provides a way to validate JSON in request/response against a schema and serialize it into an object",
    "type": "symfony-bundle",
    "require": {
        "php": ">=8.3",
        "ext-json": "*",
        "symfony/config": "7.1.*",
        "justinrainbow/json-schema": "^6",
        "psr/log": "^3",
        "symfony/dependency-injection": "7.1.*",
        "symfony/http-kernel": "7.1.*",
        "symfony/serializer": "7.1.*",
        "symfony/routing": "7.1.*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest"
        ,
        "phpunit/phpunit": "^10"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Anton Sukhachev",
            "email": "mrsuh6@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": { "Mrsuh\\JsonValidationBundle\\": "" }
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.1.*",
            "docker": false
        }
    }
}
